<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context="com.example.marcin.wegrzyn.singlescreenapp.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wikar"
        android:textAlignment="center" />
    <TextView
        android:layout_margin="8dp"
        android:textSize="24sp"
        android:text="@string/wikar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="8dp"
        android:textSize="18dp"
        android:text="@string/adr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="8dp"
        android:textSize="18dp"
        android:text="@string/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="8dp"
        android:textSize="18dp"
        android:text="@string/work_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="8dp"
        android:textSize="18dp"
        android:text="@string/www"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />








</LinearLayout>